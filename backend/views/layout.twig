                    </li>
                    <li class="nav-item">
                        <a href="/catalogos/caracteristicas_servicios" class="nav-link">Servicios</a>
                    </li>
                    <li class="nav-item">
                        <a href="/catalogos/condiciones" class="nav-link">Condiciones</a>
                    </li>
                    <li class="nav-item">
                        <a href="/catalogos/formas_pagos" class="nav-link">Formas de pago</a>
                    </li>
                    <li class="nav-item">
                        <a href="/users" class="nav-link">Usuarios</a>
                    </li>
                    <li class="nav-item">
                        <a href="/users/logout" class="nav-link">Salir</a>
                    </li>
                </ul>

            </nav>

            {% endif %}
            <div class="content-wrapper">
                <section class="content">
                    <div class="container-fluid">
                        {% block body %}{% endblock %}
                    </div>
                </section>
            </div>
            <footer class="main-footer">
